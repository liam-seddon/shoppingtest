<div class="col-md-12" style="margin: 10px;">
<input type="search" name="search" placeholder="search criteria"
						ng-model="search"></div>
						
<button ng-click="submit();">Search</button>

<div class="col-md-12" style="margin: 10px;">
					<div class="alert alert-danger" ng-hide="invalid_search">
						<strong>Incorrect search value</strong>
					</div>


<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<% for(i in values) { %>
						<% if(values[i].avail_count>0){ %>	
							<div class="column">
    							<div class="col-md-4 ">
        							<div class="col-md-8 well">	
										<img src="<%= values[i].image %> " style="width:150px;height:150px" />
										<div class="row"><Strong>Item code : </Strong><%- values[i].item_code %> </div>
 										<div class="row"><Strong>Type : </Strong><%- values[i].type %> </div>
										<div class="row"><Strong>Gender : </Strong><%- values[i].gender %> </div>
										<div class="row"><Strong>Style : </Strong><%- values[i].style %> </div>
										<div class="row"><Strong>Item price : </Strong><%- values[i].price %> </div>
										<div class="row"><Strong>Items in Stock : </Strong><%- values[i].avail_count %> </div>
										<button ng-click="addCart('<%- values[i].item_code %>');"> Add to Cart</button>		
	    							</div>
    							</div>
							</div>
						<% } else{ %> 
								<div class="column">
    								<div class="col-md-4 ">
        								<div class="col-md-8 well">
											<img src="<%= values[i].image %> " style="width:150px;height:150px" />
											<div class="row"><Strong>Item code : </Strong><%- values[i].item_code %> </div>
 										<div class="row"><Strong>Type : </Strong><%- values[i].type %> </div>
										<div class="row"><Strong>Gender : </Strong><%- values[i].gender %> </div>
										<div class="row"><Strong>Style : </Strong><%- values[i].style %> </div>
										<div class="row"><Strong>Item price : </Strong><%- values[i].price %> </div>
											<h5 style="color:#FF0000"> Out of Stock </h5>		
								    	</div>
    								</div>
								</div>
						<% } %> 
 				<% } %> 	
			</div>
		</div>
	</div>  
